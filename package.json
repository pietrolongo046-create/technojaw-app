{
  "name": "technojaw-app",
  "version": "1.3.8",
  "description": "TechnoJaw - Online Self Shine (Desktop App)",
  "scripts": {
    "dev": "npx @tauri-apps/cli dev",
    "build": "npx @tauri-apps/cli build --bundles app",
    "build:dmg": "npx @tauri-apps/cli build --bundles dmg",
    "build:all": "npx @tauri-apps/cli build",
    "build:mac-arm": "npx @tauri-apps/cli build --target aarch64-apple-darwin --bundles app",
    "build:mac-intel": "npx @tauri-apps/cli build --target x86_64-apple-darwin --bundles app",
    "build:win": "npx @tauri-apps/cli build --target x86_64-pc-windows-msvc",
    "build:ios": "npx @tauri-apps/cli ios build",
    "build:android": "npx @tauri-apps/cli android build",
    "deploy:desktop": "echo \"Implement deploy:desktop workflow (see BUILD_MASTER.md)\"",
    "deploy:releases": "echo \"Implement deploy:releases workflow (see BUILD_MASTER.md)\"",
    "install": "npm run build && npm run deploy:desktop",
    "icons": "python3 scripts/generate-icons.py"
  },
  "build": {
    "appId": "com.technojaw.app",
    "productName": "TechnoJaw",
    "publish": [
      {
        "provider": "github",
        "owner": "pietrolongo046-create",
        "repo": "technojaw-app"
      }
    ],
    "asar": true,
    "files": [
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "dist",
        "to": "dist",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "icon": "assets/technojaw-icon.icns",
      "category": "public.app-category.shopping",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/technojaw-icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.10.0",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "@tauri-apps/api": "^2.10.0"
  }
}
